{
  "name": "assemble-webpack-loader",
  "version": "0.0.0",
  "description": "Webpack loader for Assemble.",
  "repository": {
    "url": "conechan/assemble-webpack-loader",
    "type": "git"
  },
  "main": "dist/assemble-webpack-loader.common.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest && npm run lint && npm run build",
    "test:cov": "jest --coverage && npm run lint",
    "lint": "xo",
    "build": "bili --buble.target.node 4"
  },
  "author": "conechan <conechan@gmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "bili": "^0.18.1",
    "deep-assign": "^2.0.0",
    "html-webpack-plugin": "^2.30.1",
    "jest-cli": "^21.2.1",
    "memory-fs": "^0.4.1",
    "require-from-string": "^2.0.1",
    "webpack": "^3.6.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "space": 2,
    "semicolon": false,
    "esnext": true,
    "envs": [
      "jest"
    ],
    "rules": {
      "capitalized-comments": 0,
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true
        }
      ]
    }
  },
  "dependencies": {
    "assemble": "^0.24.3",
    "loader-utils": "^1.1.0"
  }
}
